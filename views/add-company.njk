<html>
<head>
    <title>Detail</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script>
        $(document).ready( () => {

            $("#add").click( () =>{
                $.post('/company', {
                    name: $('#name').val(),
                    phone: $('#phone').val(),
                    email: $('#email').val(),
                    address: $('#address').val()
                }).then(() => {
                    $('#name').val("");
                    $('#phone').val("");
                    $('#email').val("");
                    $('#address').val("");
                    alert('success');
                })

            });
        })
    </script>
</head>
<body>
<div class="container-fluid">
    <div class="page-header"><h1 class="text-center">ADD COMPANY</h1></div>
    <ul>
        <li> <a href="/">Home</a> </li>
    </ul>
    <div class="col-md-6 col-md-offset-3">
        <div class="form-group col-md-12">
            <label>Name</label>
            <br>
            <input class="form-control" name="name" id="name" value="">
        </div>
        <div class="form-group col-md-12">
            <label>Phone</label>
            <br>
            <input class="form-control" type="text" name="phone" id="phone" value="">
        </div>
        <div class="form-group col-md-12">
            <label>Email</label>
            <br>
            <input class="form-control" type="text" name="email" id="email" value="">
        </div>
        <div class="form-group col-md-12">
            <label>Address</label>
            <br>
            <input class="form-control" type="text" name="address" id="address" value="">
        </div>
        <div class="form-group col-md-12">
            <button id="add" class="btn btn-primary btn-block">
                <i class=" glyphicon glyphicon-floppy-save"></i>
                <span class="hidden-sm hidden-xs">ADD</span>
            </button>
        </div>
    </div>
</div>
</body>
</html>