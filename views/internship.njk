    </div>
</div>

</body>

<script id="Template" type="text/html">
    <a class="list-group-item" href="/course/:id:">:internshipName:</a>
</script>

<script>
    $(document).ready(function () {
        $('#inputKeyword').keyup(function () {
            $.get('/companies/search-basic', {
                keyword: $('#inputKeyword').val(),
            }).then(render)
        });

        function render(internships) {
            var template = $('#Template').html();
            var resultsHtml = internships.map(function (internship) {
                return template.replace(':internshipName:', internship.name)
                    .replace(':id:', internship.id)
            }).join('');
            $('#listCourses').html(resultsHtml);
        }
        $.get('/course/internships').then(render);
    });

</script>
</html>
