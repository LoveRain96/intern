<html>
<head>
    <title>Detail</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
<div class="container-fluid">
    <div class="page-header"><h1 class="text-center">{{company.getName()}}</h1></div>
    <ul>
        <li> <a href="/">Home</a> </li>
    </ul>
    <div class="col-md-6 col-md-offset-3">
        <form action="/company/{{company.getId()}}" method="post">
            <div class="form-group col-md-12">
                <label>Name</label>
                <br>
                <input class="form-control" name="name" id="name" value="{{company.getName()}}">
            </div>
            <div class="form-group col-md-12">
                <label>Phone</label>
                <br>
                <input class="form-control" type="text" name="phone" id="phone" value="{{company.getContact().getPhone()}}">
            </div>
            <div class="form-group col-md-12">
                <label>Email</label>
                <br>
                <input class="form-control" type="text" name="email" id="email" value="{{company.getContact().getEmail()}}">
            </div>
            <div class="form-group col-md-12">
                <label>Address</label>
                <br>
                <input class="form-control" type="text" name="address" id="address" value="{{company.getAddress()}}">
            </div>
            <div class="form-group col-md-12">
                <button class="btn btn-primary btn-block">
                    <i class=" glyphicon glyphicon-floppy-save"></i>
                    <span class="hidden-sm hidden-xs">SAVE</span>
                </button>
            </div>
        </form>
        <form action="/company/{{company.getId()}}" method="get">
            <div class="form-group col-md-12">
                <button class="btn btn-primary btn-block">
                    <i class=" glyphicon glyphicon-trash"></i>
                    <span class="hidden-sm hidden-xs">DELETE</span>
                </button>
            </div>
        </form>
    </div>
</div>
</body>
</html>