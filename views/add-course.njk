<html>
<head>
    <title>Detail</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script>
        $(document).ready( () => {

            $("#add").click( () =>{
                $.post('/company', {
                    name: $('#name').val(),
                    phone: $('#phone').val(),
                    email: $('#email').val(),
                    address: $('#address').val()
                }).then(() => {
                    alert('success');
                })

            });
        })
    </script>
</head>
<body>
<div class="container-fluid">
    <div class="page-header"><h1 class="text-center">ADD COURSE</h1></div>
    <ul>
        <li> <a href="/">Home</a> </li>
    </ul>
    <div class="col-md-6 col-md-offset-3">
        <form action="/course" method="post">
            <div class="form-group col-md-12">
                <label>Name</label>
                <br>
                <input class="form-control" name="name" id="name" value="">
            </div>
            <div class="form-group col-md-12">
                <label>StartDate</label>
                <br>
                <input class="form-control" type="date" name="startDate" id="startDate" value="">
            </div>
            <div class="form-group col-md-12">
                <label>EndDate</label>
                <br>
                <input class="form-control" type="date" name="endDate" id="endDate" value="">
            </div>
            <div class="form-group col-md-12">
                <button id="add" class="btn btn-primary btn-block">
                    <i class=" glyphicon glyphicon-floppy-save"></i>
                    <span class="hidden-sm hidden-xs">ADD</span>
                </button>
            </div>
        </form>
    </div>
</div>
</body>
</html>